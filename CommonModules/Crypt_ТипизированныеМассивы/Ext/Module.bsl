// Функция - Uint8 array
//
// Параметры:
//  ИмяМассива			 - Массив - Имя массива с данными
//  КоличествоЭлементов	 - Число  - Количество элементов в массиве с данными
// 
// Возвращаемое значение:
// Структура  - Содержание структуры: массив с данными, разрядность и диапазноны чисел 
//
Функция Uint8Array(ИмяМассива = "мДанные", КоличествоЭлементов = Неопределено) Экспорт
	
	Результат = Новый Структура;
	
	мДанные = Новый Массив;
	
	Если КоличествоЭлементов <> Неопределено Тогда 
	
		Для сч = 0 По КоличествоЭлементов - 1 Цикл
			
			мДанные.Добавить(0);	
			
		КонецЦикла;
			
	КонецЕсли;
	
	Результат.Вставить(ИмяМассива, мДанные);
	Результат.Вставить("ДиапазонЗначенийМин", 0);
	Результат.Вставить("ДиапазонЗначенийМакс", 255);
	Результат.Вставить("Разярдность", 8);
	
	Возврат Результат;
	
КонецФункции

